<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budget Alert</title>
    <!-- SweetAlert2 for alerts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <!-- Form to input budget and expenses -->
    <div class="container">
        <h3>Budget Management</h3>
        <form id="budgetForm">
            <label for="budget">Enter Your Budget:</label>
            <input type="number" id="budget" name="budget" required placeholder="Enter Budget Amount">
            
            <br><br>

            <label for="expenses">Enter Your Expenses:</label>
            <input type="number" id="expenses" name="expenses" required placeholder="Enter Expenses Amount">
            
            <br><br>
            
            <button type="submit">Check Budget</button>
        </form>
    </div>

    <script>
        // Listen for form submission
        document.getElementById('budgetForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent the form from submitting the traditional way

            // Get the budget and expenses values
            const budget = parseFloat(document.getElementById('budget').value);
            const expenses = parseFloat(document.getElementById('expenses').value);

            // Check if expenses exceed the budget
            if (expenses > budget) {
                // If expenses exceed the budget, show an alert using SweetAlert2
                Swal.fire({
                    icon: 'error',
                    title: 'Budget Exceeded!',
                    text: `You have exceeded your budget by $${(expenses - budget).toFixed(2)}!`,
                    confirmButtonText: 'OK'
                });
            } else {
                // If expenses are within the budget, show a success alert
                Swal.fire({
                    icon: 'success',
                    title: 'Budget is OK!',
                    text: `You have $${(budget - expenses).toFixed(2)} remaining in your budget.`,
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>

</body>
</html>
