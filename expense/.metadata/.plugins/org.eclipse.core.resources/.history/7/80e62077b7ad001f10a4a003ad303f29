    <!-- Display All Expenses for a Specific User -->
    <%
        String showAllExpenses = request.getParameter("showAllExpenses");
        if ("true".equalsIgnoreCase(showAllExpenses)) {
    %>
    <div class="section-header">
        <h5>All Expenses for Specific User</h5>
    </div>
    <form method="get">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="userId" class="form-label">User ID</label>
                <input type="text" name="userId" id="userId" class="form-control" placeholder="Enter User ID" required>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Show Expenses</button>
            </div>
        </div>
    </form>
    <%
            String userId = request.getParameter("userId");
            if (userId != null && !userId.trim().isEmpty()) {
                String query = "SELECT expense_id, budget_id, amount, date, category, description, created_at FROM expenses WHERE user_id = ?";
                try (Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/expensemanagementsystem", "root", "Root@123");
                     PreparedStatement pstmt = conn.prepareStatement(query)) {

                    pstmt.setInt(1, Integer.parseInt(userId));
                    ResultSet rs = pstmt.executeQuery();
    %>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Expense ID</th>
                <th>Budget ID</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Category</th>
                <th>Description</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <%
                    while (rs.next()) {
            %>
            <tr>
                <td><%= rs.getInt("expense_id") %></td>
                <td><%= rs.getInt("budget_id") %></td>
                <td><%= rs.getDouble("amount") %></td>
                <td><%= rs.getDate("date") %></td>
                <td><%= rs.getString("category") %></td>
                <td><%= rs.getString("description") %></td>
                <td><%= rs.getTimestamp("created_at") %></td>
            </tr>
            <%
                    }
                } catch (SQLException e) {
                    out.println("<tr><td colspan='7' class='text-danger text-center'>Error: " + e.getMessage() + "</td></tr>");
                }
            }
            %>
        </tbody>
    </table>
    <%
        }
    %>
